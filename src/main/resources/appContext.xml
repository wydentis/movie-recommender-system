<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="contentBasedFilter"
        class="me.wydentis.movierecommendersystem.ContentBasedFilter">
    </bean>

    <bean id="collaborativeFilter"
        class="me.wydentis.movierecommendersystem.CollaborativeFilter">
    </bean>

    <bean id="recommenderImplementation"
        class="me.wydentis.movierecommendersystem.RecommenderImplementation">
        <constructor-arg ref="contentBasedFilter" />
    </bean>
</beans>